@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav nav-item navbar-nav">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", new { area = ""}, htmlAttributes: new { title = "Manage", @class = "nav-item" })
        </li>
        @*<li><a href="@Url.Action("LogOff", "Account", new { area = "" })">Log Off</a></li>*@
        @*<li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>*@
      <li>@Html.RouteLink("Log Off", "Default", new { action = "LogOff", controller = "Account"})</li>
    </ul>
    }
}
else
{
    <ul class="nav nav-item navbar-nav">
        <li>
            
                @Html.ActionLink("Register", "Register", "Account", new { area = ""}, htmlAttributes: new { id = "registerLink", @class = "nav-item"})
                
        </li>
        <li>
            @Html.ActionLink("Log in", "Login", "Account", new { area = ""}, htmlAttributes: new { id = "loginLink", @class = "nav-item"})
        </li>
    </ul>
}
