            </dl>
            <div class="justify-content-end col-md-3">
                <dl>
                    @if (Model.Parts.Count != 0)
                    {
                        <dt>
                            @Html.DisplayNameFor(model => model.Parts)
                        </dt>
                        foreach (var part in Model.Parts)
                        {
                            <dd>
                                <a href="/Part/Details/@part.PartID">@Html.DisplayFor(model => part.Character)</a>
                            </dd>
                        }
                    }
                </dl>
            </div>
        </div>
