@model TheatreCMS.Models.CalendarEvent

@{
    ViewBag.Title = "Create Bulk Production Calendar Events";
}

    <h2>Create Bulk Production Calendar Events</h2>

    <section id="generate-showtimes-section">
        <header>Generate Showtimes</header>

        <div class="form-group">
            <label class="bulk-add--label col-md-4">Production</label>
            <div class="col-md-10 formBox">
                @Html.DropDownList("Productions", (IEnumerable<SelectListItem>)ViewData["Productions"], "N/A", htmlAttributes: new { @class = "form-control", @id="generate__production-field"})
                @Html.ValidationMessageFor(model => model.ProductionId, "", new { @class = "text-white" })
            </div>
        </div>

        <div class="form-group">
            <label class="bulk-add--label col-md-4">Start Date</label>
            <div class="col-md-10 formBox">
                @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control", @id="generate__start-date-field", @type = "date" } })
                @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-white" })
            </div>
        </div>

        <div class="form-group">
            <label class="bulk-add--label col-md-4">End Date</label>
            <div class="col-md-10 formBox">
                @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control datepicker", @id="generate__end-date-field", @type = "date" } })
                @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-white" })
            </div>
        </div>

        <div class="form-group show-times">
            <label for="matinee">
                Matinee <span id="matinee-time"></span>
                <input type="checkbox" id="matinee" name="matinee" />
            </label>
            <label for="evening">
                Evening <span id="evening-time"></span>
                <input type="checkbox" id="evening" name="evening" />
            </label>
            <label for="other" id="showtime-dropdown">
                Other
                @Html.DropDownList("Times", new SelectList(ViewData["Times"] as List<string>), "select", new { @class = "dropdown" })
            </label>
        </div>


        <div class="form-group">
                <label>
                    Monday
                    @Html.CheckBox("Monday", false)
                </label>
                <label>
                    Tuesday
                    @Html.CheckBox("Tuesday", false)
                </label>
                <label>
                    Wednesday
                    @Html.CheckBox("Wednesday", false)
                </label>
                <label>
                    Thursday
                    @Html.CheckBox("Thursday", false)
                </label>
                <label>
                    Friday
                    @Html.CheckBox("Friday", false)
                </label>
                <label>
                    Saturday
                    @Html.CheckBox("Saturday", false)
                </label>
                <label>
                    Sunday
                    @Html.CheckBox("Sunday", false)
                </label>
        </div>


    </section>

<section id="review-showtimes-section">
    <header>Review Showtimes</header>



</section>



<div>
    @Html.ActionLink("Back to List", "Index")
</div>













