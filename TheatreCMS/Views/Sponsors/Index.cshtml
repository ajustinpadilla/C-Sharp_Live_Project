</div>

<div class="iconBtnContainer">
    <button class="iconBtn">
        <i class="fa fa-search fa-fw"></i>Search <!-- This button executes a search function-->
    </button>
</div>


<table class="table-styling">
    <tr class="tr-styling">
        <th class="th-styling">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th class="th-styling">
            @Html.DisplayNameFor(model => model.Logo)
        </th>
        <th class="th-styling">
            @Html.DisplayNameFor(model => model.Height)
        </th>
        <th class="th-styling">
            @Html.DisplayNameFor(model => model.Width)
        </th>
        <th class="th-styling">
            @Html.DisplayNameFor(model => model.Current)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="tr-styling">
            <td class="td-styling">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="td-styling">

                <img src="@Url.Action("ImageView", "ImageUpload", new { id = item.SponsorId, table="Sponsor", thumbHeight = 100, thumbWidth = 100})" />
                @*//  id = item.SponsorId, table="Sponsor", path = item.Logo


                    @{
                        string img = "";
                        if (item.Logo != null)
                        {
                            byte[] thumbBytes = ImageUploadController.ImageThumbnail(item.Logo, 28, 28);
                            var base64 = System.Convert.ToBase64String(thumbBytes);
                            img = String.Format("data:image/png;base64,{0}", base64);
                        }
                    }
                    <img src="@img" />*@

            </td>
            <td class="td-styling">
                @Html.DisplayFor(modelItem => item.Height)
            </td>
            <td class="td-styling">
                @Html.DisplayFor(modelItem => item.Width)
            </td>
            <td class="td-styling">
                @Html.DisplayFor(modelItem => item.Current)
            </td>


            <td class="td-styling">             
                <button class="iconBtn">
                    <i class="fa fa-edit fa-fw"></i><a @Html.ActionLink("Edit", "Edit", new { id = item.SponsorId })>
                </button>
                <button class="iconBtn">
                    <i class="fa fa-info-circle fa-fw"></i><a @Html.ActionLink("Details", "Details", new { id = item.SponsorId })>
                </button>
                <button class="iconBtn">

                    <i class="fa fa-trash-alt fa-fw"></i><a @Html.ActionLink("Delete", "Delete", new { id = item.SponsorId })>
                </button>

                @Html.ActionLink("Edit", "Edit", new { id = item.SponsorId }) |
                @Html.ActionLink("Details", "Details", new { id = item.SponsorId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.SponsorId })
            </td>
        </tr>
    }
</table>
<br />
<p>
    @Html.ActionLink("View Sponsors", "List")
</p>

