@model IEnumerable<TheatreCMS.Models.Photo>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table-styling">
    <tr class="tr-styling">
        <th class="th-styling">
            @Html.DisplayNameFor(model => model.PhotoFile)
        </th>
        <th class="th-styling">
            @Html.DisplayNameFor(model => model.OriginalHeight)
        </th>
        <th class="th-styling">
            @Html.DisplayNameFor(model => model.OriginalWidth)
        </th>
        <th class="th-styling">
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr class="tr-styling">
        
        
        
        
        
        <td class="td-styling">
            <img class="thumbnail_size" src='@Url.Action("DisplayPhoto", "Photo", new { id = item.PhotoId })' />
        </td>
        <div id="photo-modal">
            <span id="photo-modal--close">&times;</span>
            <img id="photo-modal--content" />
        </div>
        
        
        
        
        <td class="td-styling">
            @Html.DisplayFor(modelItem => item.OriginalHeight)
        </td>
        <td class="td-styling">
            @Html.DisplayFor(modelItem => item.OriginalWidth)
        </td>
        <td class="td-styling">
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td class="td-styling">
            @Html.ActionLink("Edit", "Edit", new { id=item.PhotoId }) |
            @Html.ActionLink("Details", "Details", new { id=item.PhotoId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PhotoId })
        </td>
    </tr>
}

</table>
