@{
    ViewBag.Title = "Home Page";
}

@Styles.Render("~/Content/Site.css")
@Scripts.Render("~/Scripts/Site.js")
@using TheatreCMS.Models
@model List<Sponsor>

@*carousel section*@
<div id="main-carousel">
    <div class="slideshow-container">
        <div class="slides">
            <div class="slideTitle">Title for slide 1 here</div>
            <img src="@Url.Content("~/Content/Images/img1.jpg")" style="width:100%" />
            <div class="slideText center text-outline">Context for slide 1 here</div>
        </div> 
        <div class="slides">
            <div class="slideTitle">Title for slide 2 here</div>
            <img src="@Url.Content("~/Content/Images/img2.jpg")" style="width:100%" />
            <div class="slideText center text-outline">Context for slide 2 here</div>
        </div>
        <div class="slides">
            <div class="slideTitle">Title for slide 3 here</div>
            <img src="@Url.Content("~/Content/Images/img3.jpg")" style="width:100%" />
            <div class="slideText center text-outline">Context for slide 3 here</div>
        </div>
        <div class="slides">
            <div class="slideTitle">Title for slide 4 here</div>
            <img src="@Url.Content("~/Content/Images/img4.jpg")" style="width:100%" />
            <div class="slideText center text-outline">Context for slide 4 here</div>
        </div>
        <div class="slides">
            <div class="slideTitle">Title for slide 5 here</div>
            <img src="@Url.Content("~/Content/Images/img5.jpg")" style="width:100%" />
            <div class="slideText center text-outline">Context for slide 5 here</div>
        </div>
        @*The left and right buttons*@
        <a class="left text-outline" onclick="changeSlide(-1)">&#10094;</a>
        <a class="right text-outline" onclick="changeSlide(1)">&#10095;</a>
    </div>
    <br />
    @*The dots for navigation*@
    <div style="text-align:center">
        <span class="dot" onclick="currentSlide(1)"></span>
        <span class="dot" onclick="currentSlide(2)"></span>
        <span class="dot" onclick="currentSlide(3)"></span>
        <span class="dot" onclick="currentSlide(4)"></span>
        <span class="dot" onclick="currentSlide(5)"></span>
    </div>
</div>

@*text section*@
<div id="main-body">
    <div class="synopsisTitle center">Title for body text here</div>
    <div class="synopsisBody center">
        <p>Body text here.</p>
    </div>
</div>

